<div class="margin-container">
  <div class="container">
    <div class="container-small-left">
      <div class="well">
        <p id="notice"><%= notice %></p>
        
        <h1>Countries</h1>
        
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="1"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @countries.each do |country| %>
              <tr>
                <td><%= country.name %></td>
                <td><%= link_to 'Delete', country, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
        <%= link_to 'Add a country', new_country_path, :class => "btn btn-primary" %> <br><br>
        <%= link_to 'Back', users_admin_path, :class => "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
